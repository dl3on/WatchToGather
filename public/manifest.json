{
  "manifest_version": 3,
  "name": "WatchToGather",
  "version": "1.0.0",
  "description": "P2P watch party extension",
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "offscreen", "identity", "identity.email"],
  "host_permissions": ["http://localhost:6767/*", "ws://localhost:6767/*"]
}
